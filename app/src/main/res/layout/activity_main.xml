<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/colorSwatch"
        android:height="200dp"
        android:background="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hue"
        android:id="@+id/hueMain"
        android:labelFor="@+id/redSB"
        android:layout_below="@+id/colorSwatch"
        android:layout_marginTop="12dp" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/redSB"
        android:max="255"
        android:layout_below="@+id/hueMain"
        android:layout_alignParentStart="true"
        android:background="@drawable/bghuexml"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/saturation"
        android:id="@+id/satMain"
        android:labelFor="@+id/greenSB"
        android:layout_below="@+id/hueMain"
        android:layout_marginTop="32dp" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/greenSB"
        android:max="255"
        android:layout_below="@+id/satMain"
        android:layout_alignParentStart="true"
        android:background="@drawable/bgsatxml"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/valMain"
        android:labelFor="@+id/greenSB"
        android:text="@string/value"
        android:layout_below="@+id/satMain"
        android:layout_marginTop="34dp" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/blueSB"
        android:max="255"
        android:layout_below="@+id/valMain"
        android:layout_alignParentStart="true"
        android:background="@drawable/bgvaluexml"
        />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/blueSB"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/blueSB">

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:width="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Black"
            android:background="#000"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Red"
            android:background="#FF00"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Lime"
            android:background="#00FF00"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Blue"
            android:background="#0000FF"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Yellow"
            android:background="#FFFF00"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Cyan"
            android:background="#00FFFF"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Magenta"
            android:background="#FF00FF"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Silver"
            android:background="#C0C0C0"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Gray"
            android:background="#808080"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Maroon"
            android:background="#800000"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Olive"
            android:background="#808000"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Green"
            android:background="#008000"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Purple"
            android:background="#800080"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Teal"
            android:background="#008080"
            android:layout_weight="1" />

        <Button
            android:text=""
            android:onClick="OnButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Navy"
            android:background="#000080"
            android:layout_weight="1" />

    </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>
